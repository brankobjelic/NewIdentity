@page
@model NewIdentityApp.Pages.Users.IndexModel
@{
    @if (TempData["AlertSuccess"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Html.Raw(@TempData["AlertSuccess"])
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="container">
            <table class="table table-striped table-dark">
			<thead class="sticky-top">
                    <tr>
                            <th>User name</th>
                            <th>Email</th>
                            <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Model)
                    {
                        <tr>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td>
                            <a asp-page="/Users/Delete" asp-route-ID="@item.Id" onclick="spinner()">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
    </div>
}
